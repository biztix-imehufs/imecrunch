<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hufs.ime.imecrunch.MainActivity"
    tools:showIn="@layout/activity_main">


        <TextView
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="status: -"
            android:id="@+id/txt_status"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#3ea999"
            android:textColor="#fff"
            android:textAllCaps="true"
            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/text_sensor"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galvanic Skin Response"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:background="#3ea999"
        android:id="@+id/textView5"

        android:layout_below="@+id/txt_status"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Accelerometer"
        android:textColor="#fff"
        android:padding="10dp"
        android:background="#3ea999"
        android:id="@+id/textView2"
        android:layout_below="@+id/text_sensor"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/text_heart"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:textColor="#fff"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="#3ea999"
        android:id="@+id/textView4"
        android:layout_below="@+id/text_heart"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="-"
        android:id="@+id/text_gyro"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
